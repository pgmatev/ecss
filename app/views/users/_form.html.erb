<%= form_for :user, url: profile_path do |form| %>
<div class="text-field">
  <%= form.label :name %>
  <%= form.text_field :name, type: 'name', value:current_user.name %>
</div>

<div class="text-field">
  <%= form.label :email %>
  <%= form.text_field :email, type: 'email', value:current_user.email %>
</div>

<div class="password-field">
  <%= form.label :password %>
  <%= form.password_field :password %>
</div>

<div class="submit-field">
  <%= form.submit %>
</div>
<% end %>