<div class="hero notification is-primary">
    <div class="hero-body">
        <div class="level">
            <div class="level-left">
                <h1 class="title">Sale</h1>
            </div>
            <div class="level-right">
                <p class="title">Total: <%= @sale.price%><p>
            </div>
        </div>
    </div>
</div>
<div class="columns">
    <%= form_tag(search_sale_path, :method => "post",
        class: 'column is-one-third') do %>  
        <p id="alert"><%= alert %></p>
            <div class="field">  
                <%= search_field_tag :search, params[:search], placeholder: "Search", class: "input" %>   
                <%= button_tag "", :class => 'fa fa-search button is-secondary',:name => nil%>  
            </div>
        <%= link_to 'Back', sales_path %>
    <% end %>
    <div class="column is two-thirds">
        <table class="table">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Price</th>
                    <th>Barcode</th>
                    <th colspan="3"></th>
                </tr>
            </thead>
            <tbody>
                <% @sale.products.each do |product|%>
                      <tr>
                        <td><%= product.name %></td>
                        <td><%= product.price %></td>
                        <td><%= product.barcode %></td>
                        </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>