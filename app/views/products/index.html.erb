<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table class="table">
  <thead>
    <tr>
      <th>Product</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Barcode</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.quantity %></td>
        <td><%= product.price %></td>
        <td><%= product.barcode %></td>
        <td>
          <%= link_to edit_product_path(product) do%>
            <span class="icon-text">
              <span>Edit</span>
              <span class="icon">
                <i class='fas fa-edit'></i>
              </span>
            </span>
          <% end %>
        </td>
        <td>
          <%= link_to '', product, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'fas fa-trash'%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Product', new_product_path%>
