<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="columns">
  <div class="column is-one-third">
    <div class="field">
      <%= form.label :name, :class => "label"%>
      <%= form.text_field :name, type: 'name', :class => "input"%>
    </div>
    <div class="field">
      <%= form.label :quantity, :class => "label"%>
      <%= form.number_field :quantity, in: 1..99999, :class =>"input"%>
    </div>
    <div class="field">
      <%= form.label :price, :class => "label"%>
      <%= form.text_field :price, :class =>"input"%>
    </div>
    <div class="field">
      <%= form.label :barcode, :class => "label"%>
      <%= form.text_field :barcode, :class =>"input"%>
    </div>
  </div>
</div>

  <div class="actions">
    <%= form.submit%>
  </div>
<% end %>
